# ============================================================================
# Production Environment Variables
# ============================================================================
# IMPORTANT: Update all passwords and secrets before deploying!

# General Settings
DEBUG=False
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com
API_PREFIX=/api/v1

# CORS Settings (restrict in production)
CORS_ORIGINS='["https://yourdomain.com","https://www.yourdomain.com", "http://localhost:5173"]'

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_DB=btl_python_db

# Redis
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# AI/ML Models
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
EMBEDDING_MODEL=bkai-foundation-models/vietnamese-bi-encoder
EMBEDDING_MODEL_DIM=768
EMBEDDING_API_KEY=your-embedding-api-key
EMBEDDING_BASE_URL=https://your-embedding-service.com
COMPLETION_MODEL=gpt-3.5-turbo
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Qdrant Vector Database
QDRANT_URL=http://qdrant:6333
QDRANT_RECIPE_COLLECTION=personal
QDRANT_PERSONAL_COLLECTION=personal_recommendation

# JWT Authentication
SECRET_KEY=CHANGE_ME_RANDOM_SECRET_KEY_MIN_32_CHARS_LONG
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email/SMTP Settings (SendGrid example)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=465
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@yourdomain.com
SMTP_TLS=False
EMAILS_FROM_EMAIL=noreply@yourdomain.com
EMAILS_FROM_NAME=BTL_PYTHON_PTIT

# ARQ Worker
ARQ_QUEUE_NAME=arq:queue
ARQ_MAX_JOBS=10
ARQ_JOB_TIMEOUT=600

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn-here

# MinIO Object Storage
MINIO_ENDPOINT=http://minio:9000
MINIO_SERVER_URL=https://minio.yourdomain.com
MINIO_ACCESS_KEY=CHANGE_ME_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_ME_MINIO_SECRET_KEY_MIN_32_CHARS
MINIO_BUCKET_NAME=btl-python-prod
MINIO_ROOT_USER=CHANGE_ME_MINIO_ACCESS_KEY
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_SECRET_KEY_MIN_32_CHARS
MINIO_BROWSER_REDIRECT_URL=https://minio-console.yourdomain.com

# Admin User (First Superuser)
FIRST_SUPERUSER=admin@yourdomain.com
FIRST_SUPERUSER_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# Logging (Loki)
LOKI_URL=http://loki:3100/loki/api/v1/push
ENABLE_LOKI_LOGGING=True

# Grafana (if using monitoring profile)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# S2T Service
S2T_API_HOST=http://s2t:8001

# Frontend Build Args
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_S2T_API_HOST=https://s2t-api.yourdomain.com

