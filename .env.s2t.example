# API Settings
API_HOST=0.0.0.0
API_PORT=8001
API_PREFIX=/api/v1

# CORS Settings (comma-separated origins)
CORS_ORIGINS="*"

# Auth gRPC Service
GRPC_AUTH_HOST=localhost
GRPC_AUTH_PORT=50051
GRPC_AUTH_TIMEOUT=5.0
GRPC_AUTH_MAX_RETRIES=3

# Additional gRPC Services (leave empty if not used)
GRPC_SPEECH_HOST=
GRPC_SPEECH_PORT=
GRPC_SPEECH_TIMEOUT=30.0

# gRPC Global Settings
GRPC_ENABLE_RETRY=true
GRPC_MAX_MESSAGE_LENGTH=4194304
GRPC_KEEPALIVE_TIME_MS=10000
GRPC_KEEPALIVE_TIMEOUT_MS=5000

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Model Settings
MODEL_PATH=
MODEL_DEVICE=cpu
MODEL_BATCH_SIZE=1

# Environment (used by is_production / is_development)
ENVIRONMENT=development
